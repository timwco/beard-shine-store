section.section.banner(style="background-image:url('../assets/images/inner-pages.jpg');", data-img-width='1920', data-img-height='644', data-diff='100')
  .container
    .page-header.text-center
      h1 Beard Oil
      .bread
        ol.breadcrumb
          li
            a(href='/#!/') Home
          li.active Product
section.section.white.darkborder
  .container
    .row
      .loader(ng-show='vm.loading') Loading...
      #rightside.col-md-12.col-sm-12(ng-hide='vm.loading')
        #single-shop.row
          .col-md-4
            .shop-images
              img(ng-src='{{ vm.product.images[0].src }}')
          .col-md-8
            .shop-top-title
              h4 {{ vm.product.title }}
              strong ${{ vm.product.variants[0].price }}
            p.content(ng-bind-html='vm.description')
            form(ng-submit='vm.addToCart()', ng-show='vm.instock')
              .select-qty.clearfix
                small Select Quantity
                .wan-spinner.wan-spinner-2(style='border-color: rgb(44, 62, 80);')
                  span.minus(ng-click='vm.changeQty("down")') -
                  input(type='text', style='width: 40px;' ng-model='vm.prodObj.quantity')
                  span.plus(ng-click='vm.changeQty("up")') +
              .add-cart-button.clearfix
                button.btn.atcbtn Add to Cart
            button.btn.btn-white.oostock(ng-hide='vm.instock') Out of Stock
        hr.invis